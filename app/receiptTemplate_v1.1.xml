<g>
	<g locale ='zh'>
		<g id="header-template"  width="580" height="360" font-size="25px">
			<text x="280" y="40" text-anchor="middle" font-size="50px">东海证券</text>
			<text x="280" y="80" text-anchor="middle" font-size="20px"> 店铺地址 </text>
			<line x1="10" y1="95" x2="540" y2="95" stroke-dasharray="5,5" style="stroke:rgb(0,0,0);stroke-width:2" />
	        <text x="100" y="130" text-anchor="end" > 订单编号:</text>
			<text x="100" y="160" text-anchor="end" > 创建日期:</text>
	        <text x="100" y="200" text-anchor="end"> 店铺名称:</text>
	        <text x="100" y="240" text-anchor="end"> 客户:</text>
	        <text x="100" y="280" text-anchor="end"> 收银员:</text>

	        <text x="120" y="130" text-anchor="start"> {{ctx.orderId}} </text>
	        <text x="120" y="160" text-anchor="start"> {{formatDate(ctx.docDate)}} </text>
	        <text x="120" y="200" text-anchor="start"> {{ctx.storeName}} </text>
			<text x="120" y="240" text-anchor="start" >{{ctx.customerName}}</text>
			<text x="120" y="280" text-anchor="start" >{{ctx.employer}}</text>

			<line x1="10" y1="290" x2="540" y2="290" stroke-dasharray="5,5" style="stroke:rgb(0,0,0);stroke-width:2" />

			<text x="30" y="340" text-anchor="start" > 商品编号</text>
			<text x="150" y="340" text-anchor="start" > 商品名称</text>
	        <text x="350" y="340" text-anchor="start"> 原价</text>
			<text x="400" y="340" text-anchor="start"> 现价</text>
	        <text x="450" y="340" text-anchor="start"> 数量</text>
	        <text x="500" y="340" text-anchor="start"> 小计</text>
		</g>

		<g id="item-template"  width="580" height="85" font-size="25px">
			<text id="code" x="30" y="40" text-anchor="start"> {{ctx.productId}} </text>
			<text id="name" x="150" y="40" text-anchor="start"> {{ctx.itemName}} </text>
			<text id="price" x="350" y="80" text-anchor="start" > {{ctx.standPrice}} </text>
			<text id="price" x="400" y="80" text-anchor="start" > {{ctx.price}} </text>
			<text id="quantity" x="450" y="80" text-anchor="start" > {{ctx.quantity}} </text>
			<text id="linetotal" x="500" y="80" text-anchor="start"> {{ctx.lineTotal}} </text> 
		</g>
	 
		<g id="foot-template"  width="580" height="320" font-size="30px">

			<text title="total" x="400" y="40" text-anchor="end" >总计:</text>
			<text id="total" x="410" y="40" text-anchor="start">{{ctx.subTotal + ' ' + ctx.currencyCode}}</text>

			<text title="discountPerct" x="400" y="80" text-anchor="end">折扣率:</text>
			<text id="discountPerct" x="410" y="80" text-anchor="start">{{ctx.discountPercentage +' %'}}</text>

			<text title="discountAt" x="400" y="120" text-anchor="end">折扣额:</text>
			<text id="discountAt" x="410" y="120" text-anchor="start">{{ctx.discountSum + ' ' + ctx.currencyCode}}</text>
			
		    <text relative='1' title="tax" x="400" deltaY="40" removeCond="ctx.priceMethod == 'GROSS_PRICE'" text-anchor="end">增值税:</text>
	        <text relative='1' id="tax" x="410" deltaY="0" removeCond="ctx.priceMethod == 'GROSS_PRICE'" text-anchor="start">{{ctx.tax + ' ' + ctx.currencyCode}}</text>

	        <repeat model="paymentDetails">
	        	 
				<text relativeY='1' x = "400" deltaY="30"  text-anchor="end">{{ (model.paymentAccount === 54 ? 12 :  ( 12 === '5' ? 12: 1221)  ) }}</text>
				<text relative='1' deltaX="10"  text-anchor="start">{{model.amount}}</text>
			 
			</repeat>
	        
	        <text relative='1' title="docTotal" x="400" deltaY="40" text-anchor="end">应付总额:</text>
	        <text relative='1' id="docTotal" x="410" deltaY="0" text-anchor="start">{{ctx.finalSum + ' ' + ctx.currencyCode}}</text>

			<line relative='1' x1="10" x2="540" deltaY="30" stroke-dasharray="5,5" style="stroke:rgb(0,0,0);stroke-width:1" />
			<text relativeY='1' x="280" deltaY="60" text-anchor="middle" >欢迎惠顾</text>
			<line relative='1' x1="10" x2="540" deltaY="20" stroke-dasharray="5,5" style="stroke:rgb(0,0,0);stroke-width:1" />
		</g>
	</g>

	<g locale ='en'>
		<g id="header-template"  width="580" height="360" font-size="25px">
			<text x="280" y="40" text-anchor="middle" font-size="50px">Donghai Group</text>
			<text x="280" y="80" text-anchor="middle" font-size="20px"> Address </text>
			<line x1="10" y1="95" x2="540" y2="95" stroke-dasharray="5,5" style="stroke:rgb(0,0,0);stroke-width:2" />
	        <text x="150" y="130" text-anchor="end" > orderId:</text>
			<text x="150" y="160" text-anchor="end" >  Create Time:</text>
	        <text x="150" y="200" text-anchor="end"> Store:</text>
	        <text x="150" y="240" text-anchor="end"> Customer:</text>
	        <text x="150" y="280" text-anchor="end"> Cashier:</text>

	        <text x="170" y="130" text-anchor="start"> {{ctx.orderId}} </text>
	        <text x="170" y="160" text-anchor="start"> {{formatDate(ctx.docDate)}} </text>
	        <text x="170" y="200" text-anchor="start"> {{ctx.storeName}} </text>
			<text x="170" y="240" text-anchor="start" >{{ctx.customerName}}</text>
			<text x="170" y="280" text-anchor="start" >{{ctx.employer}}</text>

			<line x1="10" y1="290" x2="540" y2="290" stroke-dasharray="5,5" style="stroke:rgb(0,0,0);stroke-width:2" />

			<text x="30" y="340" text-anchor="start" > Product</text>
	        <text x="250" y="340" text-anchor="start"> Price</text>
	        <text x="350" y="340" text-anchor="start"> Quantity</text>
	        <text x="450" y="340" text-anchor="start"> SubTotal</text>
		</g>

		<g id="item-template"  width="580" height="85" font-size="25px">
			<text id="name" x="30" y="40" text-anchor="start"> {{ctx.itemName}} </text>
			<text id="price" x="250" y="80" text-anchor="start" > {{ctx.standPrice}} </text>
			<text id="quantity" x="350" y="80" text-anchor="start" > {{ctx.quantity}} </text>
			<text id="linetotal" x="450" y="80" text-anchor="start"> {{ctx.lineTotal}} </text> 
		</g>
	 
		<g id="foot-template"  width="580" height="320" font-size="30px">

			<text title="total" x="400" y="40" text-anchor="end" >Total Amount:</text>
			<text id="total" x="410" y="40" text-anchor="start">{{ctx.subTotal + ' ' + ctx.currencyCode}}</text>

			<text title="cashpay" x="400" y="80" text-anchor="end">Discount Rate:</text>
			<text id="cash" x="410" y="80" text-anchor="start">{{ctx.discountPercentage +' %'}}</text>

			<text title="change" x="400" y="120" text-anchor="end">Discount Amount:</text>
			<text id="change" x="410" y="120" text-anchor="start">{{ctx.discountSum + ' ' + ctx.currencyCode}}</text>

			<text title="change" x="400" y="160" text-anchor="end">Payment Method:</text>
			<text id="change" x="410" y="160" text-anchor="start">{{ctx.paymentMethod === 'Cash' ? 'Cash': (ctx.paymentMethod === 'Bank' ? 'Cash' : 'Others')}}</text>

		    <text relative='1' title="tax" x="400" deltaY="40" removeCond="ctx.priceMethod == 'GROSS_PRICE'" text-anchor="end">Tax:</text>
	        <text relative='1' id="tax" x="410" deltaY="0" removeCond="ctx.priceMethod == 'GROSS_PRICE'" text-anchor="start">{{ctx.tax + ' ' + ctx.currencyCode}}</text>

	        <repeat model="paymentDetails">
	        	 
				<text relativeY='1' x = "400" deltaY="30"  text-anchor="end">{{model.paymentAccount}}</text>
				<text relative='1' deltaX="10"  text-anchor="start">{{model.amount}}</text>
			 
			</repeat>
	        
	        <text relative='1' title="docTotal" x="400" deltaY="40" text-anchor="end">应付金额:</text>
	        <text relative='1' id="docTotal" x="410" deltaY="0" text-anchor="start">{{ctx.preTaxSum + ' ' + ctx.currencyCode}}</text>

			<line relative='1' x1="10" x2="540" deltaY="30" stroke-dasharray="5,5" style="stroke:rgb(0,0,0);stroke-width:1" />
			<text relativeY='1' x="280" deltaY="60" text-anchor="middle" >Welcome</text>
			<line relative='1' x1="10" x2="540" deltaY="20" stroke-dasharray="5,5" style="stroke:rgb(0,0,0);stroke-width:1" />
		</g>
	</g>
</g>



